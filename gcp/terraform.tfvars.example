# =============================================================================
# TERRAFORM VARIABLES EXAMPLE
# =============================================================================
# Copy this file to terraform.tfvars and update the values for your deployment
# =============================================================================

# -----------------------------------------------------------------------------
# REQUIRED VARIABLES
# -----------------------------------------------------------------------------

# GCP Project ID
project_id = "your-gcp-project-id"

# GCP Region
region = "europe-west2"

# GCP Zone
zone = "europe-west2-a"

# Path to service account JSON key file
credentials_file = "secrets/your-service-account-key.json"

# VS Code Server domain (for SSL certificate)
vscode_domain = "code.yourdomain.com"

# VS Code Server password
vscode_password = "YourSecurePassword123"

# Let's Encrypt email for SSL certificate
letsencrypt_email = "your-email@yourdomain.com"

# Your public IP for firewall restrictions
admin_ip_cidr = "YOUR_PUBLIC_IP/32"

# -----------------------------------------------------------------------------
# OPTIONAL VARIABLES
# -----------------------------------------------------------------------------

# Instance configuration
machine_type    = "e2-micro"
boot_disk_image = "projects/debian-cloud/global/images/family/debian-11"
boot_disk_size_gb = 30
boot_disk_type = "pd-standard"

# Service account configuration
service_account = {
  email  = "your-service-account@your-project.iam.gserviceaccount.com"
  scopes = ["https://www.googleapis.com/auth/cloud-platform"]
}

# Network configuration
network_cidr = "10.0.0.0/16"
subnet_cidrs = ["10.0.1.0/24", "10.0.2.0/24"]

# Security settings
enable_monitoring = true
enable_os_login = true
enable_backup = false

# Scaling
num_instances = 1
auto_delete_disk = true

# Environment
environment = "production"

# Additional tags
additional_tags = {
  "CostCenter" = "Engineering"
  "Project"    = "VS Code Server"
}
