# =============================================================================
# VS CODE SERVER - EXAMPLE CONFIGURATION
# =============================================================================
# Copy this file to terraform.tfvars and update the values with your configuration
# =============================================================================

# -----------------------------------------------------------------------------
# REQUIRED VARIABLES
# -----------------------------------------------------------------------------

# GCP Project ID where resources will be created
project_id = "your-project-id"

# Domain name for VS Code Server (e.g., code.yourdomain.com)
vscode_domain = "code.example.com"

# Password for VS Code Server authentication
vscode_password = "ChangeMe123!"

# Email for Let's Encrypt certificate notifications
letsencrypt_email = "admin@example.com"

# Path to GCP service account key file
credentials_file = "~/.config/gcloud/credentials.json"

# -----------------------------------------------------------------------------
# OPTIONAL VARIABLES - Uncomment and modify as needed
# -----------------------------------------------------------------------------

# Deployment environment (dev, staging, prod)
# environment = "production"

# GCP region and zone
# region = "europe-west2"
# zone   = "europe-west2-b"

# Compute instance configuration
# machine_type      = "e2-micro"
# boot_disk_size_gb = 30
# boot_disk_type    = "pd-standard"

# Network configuration
# network_cidr = "10.0.0.0/16"
# subnet_cidrs = ["10.0.1.0/24", "10.0.2.0/24"]

# Security settings
# admin_ip_cidr      = "203.0.113.42/32"  # Restrict admin access to specific IP
# enable_os_login    = true
# enable_monitoring  = true
# enable_backup      = false
# backup_schedule    = "0 2 * * *"  # 2 AM daily

# Additional tags for resources
# additional_tags = {
#   team        = "devops"
#   cost-center = "engineering"
#   repository  = "github.com/your-org/vscode-server-gcp"
#   environment = "production"
# }

# Notification email for alerts
# notification_email = "alerts@example.com"

# Service account configuration
# service_account = {
#   email  = "vscode-server@your-project.iam.gserviceaccount.com"
#   scopes = ["cloud-platform"]
# }

# Number of instances to create
# num_instances = 1

# Auto-delete disk when instance is deleted
# auto_delete_disk = true

# -----------------------------------------------------------------------------
# ADVANCED CONFIGURATION - Modify only if you know what you're doing
# -----------------------------------------------------------------------------

# Custom boot disk image
# boot_disk_image = "debian-cloud/debian-11-bullseye-v20230629"

# Custom startup script path
# startup_script_path = "scripts/startup.sh"

# Custom metadata for instances
# instance_metadata = {
#   enable-oslogin          = "TRUE"
#   block-project-ssh-keys = "TRUE"
#   serial-port-enable     = "TRUE"
# }

# Custom labels for all resources
# labels = {
#   application = "vscode-server"
#   environment = "production"
#   managed-by  = "terraform"
# }

